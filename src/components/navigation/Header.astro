---
import { link } from 'astro-typed-links/link';
import { CONTACT_URL } from '@/config/constants';
import PardoLogo from '@/assets/pardo-logo.svg';
import Button from '@/components/common/Button.astro';
import Link from '@/components/common/Link.astro';
---

<div class='fixed top-5 left-1/2 z-50 container mx-auto -translate-x-1/2 transform px-4 sm:px-0'>
  <header class='bg-background grid grid-cols-3 items-center justify-between rounded p-5 shadow'>
    <div>
      <Button as='a' href={CONTACT_URL} size='sm'> Ask Pardo </Button>
    </div>
    <div class='flex items-center justify-center'>
      <Link href={link('/')}>
        <PardoLogo class='h-6 w-auto' />
      </Link>
    </div>
    <div></div>
  </header>
</div>
